<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_item_help"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="30dp"
        android:layout_height="30dp"
        fresco:placeholderImage="@drawable/icon_email"
        fresco:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_message"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/iv_message"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        style="@style/master_info_text"
        app:layout_constraintRight_toLeftOf="@+id/iv_help_arrow"
        android:layout_marginEnd="16dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="20dp"
        android:layout_height="20dp"
        fresco:placeholderImage="@drawable/arrow_right_gray"
        fresco:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:id="@+id/iv_help_arrow"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>