<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_register_bg_gray"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fresco_login_banner"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        fresco:placeholderImage="@drawable/home_banner"
        fresco:actualImageScaleType="fitCenter"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/toolbar_home_title"
            style="@style/tool_bar"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/register_user_name_root"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fresco_login_banner">

        <TextView
            style="@style/register_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/user_name"/>

        <EditText
            android:id="@+id/et_register_user"
            style="@style/register_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_email_root"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/register_user_name_root">

        <TextView
            style="@style/register_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_email"/>

        <EditText
            android:id="@+id/et_email"
            style="@style/register_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_pw_root"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/register_email_root">

        <TextView
            style="@style/register_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/password"/>

        <EditText
            android:id="@+id/et_pw"
            android:inputType="textPassword"
            style="@style/register_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_repw_root"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/register_pw_root">

        <TextView
            style="@style/register_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_confirm_password"/>

        <EditText
            android:id="@+id/et_repw"
            android:inputType="textPassword"
            style="@style/register_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_code_root"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/register_repw_root">

        <TextView
            style="@style/register_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_code"/>

        <EditText
            android:id="@+id/et_code"
            android:inputType="textPassword"
            style="@style/register_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_register_code"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg_white"
            android:scaleType="centerInside"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_reg"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/text_register"
        android:background="@drawable/btn_bg_blue"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_code_root"
        app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>