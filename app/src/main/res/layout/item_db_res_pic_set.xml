<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_pic_set"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_set_root_height"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_pic_set"
        android:layout_width="0dp"
        android:layout_height="@dimen/video_set_img_height"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        fresco:placeholderImage="@color/color_bottom_divider"
        fresco:actualImageScaleType="fitCenter"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline28"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/tv_pic_set_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/video_set_title"
        tools:text="@string/text_article_title_holder"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/iv_pic_set"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic_set"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_pic_set"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/iv_pic_set"/>

    <View
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:background="@color/color_white"
        android:id="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/iv_pic_set"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic_set"
        app:layout_constraintRight_toLeftOf="@+id/tv_pic_set_title"
        android:layout_marginEnd="8dp"/>

    <View
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:background="@color/color_white"
        android:id="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/iv_pic_set"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic_set"
        app:layout_constraintLeft_toRightOf="@+id/tv_pic_set_title"
        android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>