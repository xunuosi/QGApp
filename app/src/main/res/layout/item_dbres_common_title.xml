<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/resdb_materail_title_height"
    android:background="@color/white"
    android:layout_marginTop="16dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_dbres_ct_indicator"
        android:layout_width="@dimen/hf_item_article_indicator_width"
        android:layout_height="@dimen/hf_item_article_indicator_height"
        fresco:placeholderImage="@drawable/indicator_yellow"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_dbres_ct_title"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_dbres_ct_title"
        android:layout_marginBottom="8dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="@dimen/hf_item_article_indicator_width"
        android:layout_height="@dimen/hf_item_article_indicator_height"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        fresco:layout_constraintBottom_toBottomOf="@+id/tv_item_dbres_ct_title"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="@+id/tv_item_dbres_ct_title"
        fresco:placeholderImage="@drawable/indicator_yellow"/>

    <TextView
        android:id="@+id/tv_item_dbres_ct_title"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        tools:text="@string/text_article_title_holder"
        android:gravity="center_vertical"
        style="@style/dbres_text_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_dbres_ct_indicator"
        fresco:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toLeftOf="@+id/guideline21"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline21"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <TextView
        android:id="@+id/tv_item_dbres_ct_get"
        style="@style/dbres_text_blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/text_get_all"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_dbres_ct_title"
        app:layout_constraintLeft_toLeftOf="@+id/guideline21"
        app:layout_constraintRight_toLeftOf="@+id/iv_item_dbres_ct_indicator2"
        app:layout_constraintTop_toTopOf="@+id/tv_item_dbres_ct_title"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_dbres_ct_indicator2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        fresco:placeholderImage="@drawable/arrow_right_blue_24dp"
        app:layout_constraintTop_toTopOf="@+id/tv_item_dbres_ct_get"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_dbres_ct_get"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/empty_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>