<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_db_res_hot_pic"
    android:layout_width="match_parent"
    android:layout_height="@dimen/resdb_materail_root_height"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_resdb_pic"
        android:layout_width="@dimen/resdb_materail_cover_width"
        android:layout_height="@dimen/resdb_materail_cover_height"
        fresco:placeholderImage="@color/color_bottom_divider"
        fresco:actualImageScaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline26"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <TextView
        android:id="@+id/tv_resdb_pic_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_article_title_holder"
        style="@style/dbres_text_title"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/iv_resdb_pic"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/iv_resdb_pic"/>

    <TextView
        android:id="@+id/tv_resdb_pic_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="3"
        android:ellipsize="end"
        tools:text="@string/text_book_content_holder"
        style="@style/dbres_text_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_resdb_pic_title"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_resdb_pic_title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_resdb_pic_title"/>

    <TextView
        android:id="@+id/tv_resdb_pic_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/text_resource_format"
        style="@style/dbres_text_indicator"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_resdb_pic_title"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_resdb_pic_title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_resdb_pic_info"
        app:layout_constraintHorizontal_bias="0.0"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>