<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fresco_login_banner"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        fresco:placeholderImage="@drawable/home_banner"
        fresco:actualImageScaleType="centerCrop"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/toolbar_home_title"
            style="@style/tool_bar"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/login_user_root"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_bg_white"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fresco_login_banner">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person_gray_36dp"
            android:scaleType="center"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_login_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"/>

        <EditText
            android:id="@+id/et_login_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/login_edit_text"
            android:hint="@string/user_name"
            android:background="@null"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_pw_root"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_bg_white"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_user_root"
        app:layout_constraintHorizontal_bias="0.0">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_lock_gray_36dp"
            android:scaleType="center"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_login_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"/>

        <EditText
            android:id="@+id/et_login_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            style="@style/login_edit_text"
            android:background="@null"
            android:hint="@string/password"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/text_login"
        android:background="@drawable/btn_bg_blue"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/login_pw_root"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/text_register"
        app:layout_constraintLeft_toRightOf="@+id/btn_login"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/login_pw_root"
        android:layout_marginRight="44dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_bg_white"
        android:textColor="@color/color_login_text"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.567" />
    <include layout="@layout/layout_loading"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>