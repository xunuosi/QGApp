<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_head_root"
    android:layout_width="match_parent"
    android:layout_height="446dp"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <com.youth.banner.Banner
        android:id="@+id/banner_home_head"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/empty_hf_head"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_home_head"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"/>
    <View
        android:id="@+id/empty2_hf_head"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_home_head"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"/>
    <View
        android:id="@+id/empty3_hf_head"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_bottom_divider"
        app:layout_constraintTop_toBottomOf="@+id/banner_home_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/iv_hf_head_"
        android:layout_width="62dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/btn_bg_blue"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/banner_home_head"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/empty3_hf_head"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/empty_hf_head"
        android:layout_marginRight="0dp"
        app:layout_constraintVertical_bias="0.3"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_hf_head_"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/empty3_hf_head"
        app:layout_constraintRight_toLeftOf="@+id/empty_hf_head"
        android:layout_marginRight="0dp"/>
</android.support.constraint.ConstraintLayout>